<t:layout
    xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    xmlns:p="tapestry:parameter">
    
    <t:atmos.container>
    	topic1: <t:atmos.pushTarget
    		topics="prop:['topic1','topic2']" 
    		event="chat1"
    	/>
    	<br />
    	
    	topic2,topic3: <t:atmos.pushTarget
    		topics="prop:['topic2','topic3']"
    		event="chat2" 
    	/>
    </t:atmos.container>
    
    <t:block t:id="messageBlock">
    	${message}
    </t:block>
</t:layout>